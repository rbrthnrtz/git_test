    <script>
        // 0 Basic Multiply function 

        function multiply (number, number2) {
            console.log(number * number2)
        }
       
        // 1 Capitalize First Letter Function
        function capitalizeFirst(word) {
            return word.charAt(0).toUpperCase() + word.slice(1);
        }

        // 2 LastLetter Function
        function lastLetter(word) {
            return word.slice(0, -1) + word.slice(-1).toUpperCase();
        }

        // 3 FizzBuzz Solution
        function fizzBuzz(number) {
            for (let i = 1; i < number; i++) {
                if (i%5 === 0 && i%3 === 0) {
                    console.log("FizzBuzz");
                }
                else if (i%3 === 0) {
                    console.log("Fizz");
                }
                else if (i%5 === 0) {
                    console.log("Buzz");
                }
                else {
                    console.log(i);
                }
            }
        };

        //word = prompt("Enter a word");
        number = prompt("Enter a number"); 
        
        //console.log(capitalizeFirst(word));
        //console.log(lastLetter(word));
        fizzBuzz(number);

        //number = prompt("Enter a number");
        //number2 = prompt("Enter a second number");

        //multiply(number, number2);

    </script>
